<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_layout"
    android:background="@color/app_background"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="6dp"
    app:cardBackgroundColor="#00000000"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_background"
            android:focusable="false"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/search_parent"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="center"

                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/fragment_home_search_main_layout_search_img"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/search_image" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mSearchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toLeftOf="@id/mClearTextButton"
                    android:layout_toRightOf="@id/fragment_home_search_main_layout_search_img"
                    android:alpha="0.7"
                    android:background="@color/search_background"
                    android:gravity="center_horizontal"
                    android:hint="search movies and shows"

                    android:textColorHint="@color/white"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"


                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mClearTextButton"
                     android:layout_width="13dp"
                    android:layout_height="13dp"

                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="7dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_clear_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/voice_search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="7dp"
                    app:srcCompat="@drawable/ic_baseline_keyboard_voice_24" />

            </RelativeLayout>

        </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>